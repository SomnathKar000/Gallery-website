{
  "builds": [
    { "src": "backend/index.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend && npm install --force && npm run build",
        "outputDirectory": "frontend/build"
      }
    }
  ],
  "routes": [
    { "src": "/api/v1/(.*)", "dest": "/backend/index.js" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ],
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/backend/index.js"
    }
  ]
}
