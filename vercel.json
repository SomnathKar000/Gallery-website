{
  "builds": [
    { "src": "backend/index.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend && npm install --force && npm run build",
        "outputDirectory": "frontend/build"
      }
    }
  ],
  "routes": [
    { "src": "/api/v1/(.*)", "dest": "/backend/index.js" },
    { "src": "/static/(.*)", "dest": "/frontend/build/static/$1" },
    { "src": "/favicon.ico", "dest": "/frontend/build/favicon.ico" },
    { "src": "/manifest.json", "dest": "/frontend/build/manifest.json" },
    { "src": "/logo192.png", "dest": "/frontend/build/logo192.png" },
    { "src": "/logo512.png", "dest": "/frontend/build/logo512.png" },
    { "src": "/robots.txt", "dest": "/frontend/build/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/frontend/build/sitemap.xml" },
    {
      "src": "/sitemap_index.xml",
      "dest": "/frontend/build/sitemap_index.xml"
    },
    { "src": "/.well-known/(.*)", "dest": "/frontend/build/.well-known/$1" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
}
