{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "npm",
      "config": {
        "production": true,
        "buildCommand": "npm run build",
        "outputDirectory": "frontend/build"
      }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "backend/index.js" }]
}
